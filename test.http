### Request to update user
POST {{endpoint}}
Content-Type: application/json
X-REQUEST-TYPE: GraphQL

mutation Mutation($id: Int!, $input: UpdateUserInput!) {
  updateUser(id: $id, input: $input) {
    id,
    first_name,
    last_name,
    email,
    adress,
    postal_code,
    city,
    company_name,
    siret
  }
}

